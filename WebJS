async function askGPT() {
    const userInput = document.getElementById('userInput').value;
    document.getElementById('userInput').value = ''; // Clear input after sending
    displayMessage(userInput, 'user'); // Display user message

    try {
        const response = await fetch('https://intelli-start-pgulur.replit.app', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ prompt: userInput })
        });
        const data = await response.json();
        displayMessage(data.choices[0].text, 'gpt'); // Update this based on the actual response structure
    } catch (error) {
        displayMessage('Error: ' + error.message, 'gpt');
    }
}

function displayMessage(message, sender) {
    const messagesContainer = document.getElementById('messages');
    const messageDiv = document.createElement('div');
    messageDiv.textContent = message;
    messageDiv.className = `message ${sender}`;
    messagesContainer.appendChild(messageDiv);
}
